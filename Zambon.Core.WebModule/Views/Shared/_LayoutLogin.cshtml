<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <title></title>

    <environment names="Development,Test,Production">
        <link rel="stylesheet" href="~/css/bootstrap-4.1.3.min.css" />
        <link rel="stylesheet" href="~/css/open-iconic-1.1.0-bootstrap.min.css">
        <link rel="stylesheet" href="~/css/Login.css?version=2.0.1" />
    </environment>
</head>

<body>
    <div class="container">
        <div class="row no-gutters justify-content-center">
            <div class="col-lg-7 align-self-center">

                <div class="login-wrapper">
                    <div class="login-background position-absolute" app-set-login-theme></div>

                    <div class="login-container pt-5 pb-3 px-3">
                        <div class="login-logo-wrapper row no-gutters justify-content-around">
                            <div class="login-logo-container col-auto align-center p-2">
                                <img src="~/images/LogoLogin.png" />
                            </div>
                        </div>

                        @RenderBody()
                    </div>
                </div>

                <div class="login-footer-wrapper">
                    <div class="login-footer-container position-fixed p-2">
                        <span static-text-for="AppName"></span>&nbsp;v<span static-text-for="AppVersion"></span>&nbsp;&copy;&nbsp;@DateTime.Now.Year&nbsp;<span static-text-for="AppCopyright"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <environment names="Development,Test,Production">
        <script src="~/js/jquery-3.2.1.min.js"></script>
        <script src="~/js/popper-1.11.0.min.js"></script>
        <script src="~/js/jquery.unobtrusive-ajax.min.js"></script>
        <script src="~/js/bootstrap-4.1.3.min.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>