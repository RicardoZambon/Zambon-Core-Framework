@model Zambon.Core.Security.BusinessObjects.Users
       
@{ var currentTab = TempData.GetCurrentTab("data", "managers", "subordinates"); }

<ul class="nav nav-tabs">
    <li class="nav-item"><a data-toggle="tab" class="nav-link text-body @(currentTab.Equals("data") ? "active" : "")" href="#data"><span class="oi oi-person mr-1"></span>@*@_model.Model.GetText("Modal_User_TabData_Title")*@</a></li>
    <li class="nav-item"><a data-toggle="tab" class="nav-link text-body @(currentTab.Equals("managers") ? "active" : "")" href="#managers"><span class="oi oi-grid-two-up mr-1"></span><label asp-for="@Model.Managers"></label><span sublistview-count-for="ListView_UserManagers" sublistview-count-model="@Model" sublistview-count-collection="Managers" class="badge badge-primary ml-1"></span></a></li>
    <li class="nav-item"><a data-toggle="tab" class="nav-link text-body @(currentTab.Equals("subordinates") ? "active" : "")" href="#subordinates"><span class="oi oi-grid-three-up mr-1"></span><label asp-for="@Model.Subordinates"></label><span sublistview-count-for="ListView_UserSubordinates" sublistview-count-model="@Model" sublistview-count-collection="Subordinates" class="badge badge-primary ml-1"></span></a></li>
</ul>

<div class="tab-content">
    <div class="tab-pane fade @(currentTab.Equals("data") ? "show active" : "")" id="data">
        <div class="card border-top-0">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="@Model.FullName"></label>
                        <input asp-for="@Model.FullName" autofocus />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="@Model.Username"></label>
                        <input asp-for="@Model.Username" />
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="@Model.Password"></label>
                        <input asp-for="@Model.Password" />
                    </div>
                    <div class="form-group form-check col-auto">
                        <label class="control-label mb-0">&nbsp;</label>
                        <div class="custom-control custom-checkbox mt-1" style="margin-left: 1px">
                            <input type="checkbox" class="custom-control-input" asp-for="@Model.LogonAllowed">
                            <label class="custom-control-label" asp-for="@Model.LogonAllowed"></label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="@Model.Email"></label>
                        <input asp-for="@Model.Email" />
                    </div>
                    <div class="form-group form-check col-auto">
                        <label class="control-label mb-0">&nbsp;</label>
                        <div class="custom-control custom-checkbox mt-1" style="margin-left: 1px">
                            <input type="checkbox" class="custom-control-input" asp-for="@Model.SendEmail">
                            <label class="custom-control-label" asp-for="@Model.SendEmail"></label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col">
                        <label asp-for="@Model.Roles"></label>

                        @await Component.InvokeAsync("SubListView", new { entity = Model, property = "Roles", subListViewId = "ListView_RolesUsers", scrollSize = "sm" })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="tab-pane fade @(currentTab.Equals("managers") ? "show active" : "")" id="managers">
        <div class="card border-top-0">
            <div class="card-body p-2">
                @await Component.InvokeAsync("SubListView", new { entity = Model, property = "Managers", subListViewId = "ListView_UsersManagers", scrollSize = "md" })
            </div>
        </div>
    </div>

    <div class="tab-pane fade @(currentTab.Equals("subordinates") ? "show active" : "")" id="subordinates">
        <div class="card border-top-0">
            <div class="card-body p-2">
                @await Component.InvokeAsync("SubListView", new { entity = Model, property = "Subordinates", subListViewId = "ListView_UsersSubordinates", scrollSize = "md" })
            </div>
        </div>
    </div>
</div>