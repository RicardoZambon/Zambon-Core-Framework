  <ModuleConfiguration>
    <LoginDefaults Theme="" />
    <DetailViewDefaults DefaultAction="Save" DefaultView="_Modal" />
    <ListViewDefaults CanEdit="True" DefaultAction="Edit" ShowPagination="True" PageSize="20" PagesToShow="14" />
  </ModuleConfiguration>

  <Navigation>
    <Menu Id="Reports" DisplayName="Reports" Icon="oi-print">
    </Menu>
    <Menu Id="Security" DisplayName="Security" Icon="oi-key">
      <Menu Id="User" Index="0" Type="ListView" ViewID="ListView_Users" />
      <Menu Id="Role" Index="1" Type="ListView" ViewID="ListView_Roles" />
    </Menu>
    <Menu Id="Configuration" DisplayName="Configuration" Icon="oi-cog" />
  </Navigation>
  
  <Views>
    <DetailView ViewId="DetailView_Users" ControllerName="Users" ActionName="Save" Type="Users">
      <Buttons>
        <Button Id="NewRole" DisplayName="Link new role" ClassName="btn-primary" Target="ListView_RolesUsers" ActionName="AddRoles" OpenModal="ModalView_Roles" />
        <Button Id="NewManager" DisplayName="Link new manager" ClassName="btn-primary" Target="ListView_UsersManagers" ActionName="AddManagers" OpenModal="ModalView_Managers" />
        <Button Id="NewSubordinate" DisplayName="Link new subordinate" ClassName="btn-primary" Target="ListView_UsersSubordinates" ActionName="AddSubordinates" OpenModal="ModalView_Subordinates" />

        <Button Id="SaveChanges" DisplayName="Save Changes" ClassName="btn-primary" Target="ModalFooter" />
      </Buttons>

      <SubViews>
        <LookupView Id="ModalView_Roles" ViewId="LookupView_Roles" Title="Select the roles to add to the user" />
        <LookupView Id="ModalView_Managers" ViewId="LookupView_Users" Title="Select the managers to add to the user" />
        <LookupView Id="ModalView_Subordinates" ViewId="LookupView_Users" Title="Select the subordinates to add to the user" />
        <SubListView Id="SubList_RolesUsers" ViewId="ListView_RolesUsers" ScrollSize="sm" />
        <SubListView Id="SubList_UsersManagers" ViewId="ListView_UsersManagers" ScrollSize="md" />
        <SubListView Id="SubList_UsersSubordinates" ViewId="ListView_UsersSubordinates" ScrollSize="md" />
      </SubViews>
    </DetailView>
    <ListView ViewId="ListView_Users" ControllerName="Users" ActionName="Edit" Type="Users" Sort="FullName">
      <SearchProperties>
        <SearchProperty PropertyName="FullName" Index="0" />
        <SearchProperty PropertyName="Username" Index="1" />
      </SearchProperties>

      <Buttons>
        <Button Id="New" DisplayName="New user" ClassName="btn-primary" Target="Toolbar" ActionName="New" OpenModal="ModalView_Users" />
        <Button Id="Delete" DisplayName="Delete user" ClassName="text-danger" IconName="oi-x" Target="Inline" ActionName="Delete" ActionParameters="objectId=[ID]" ConfirmMessage="Do you confirm the exclusion of the user?" />
      </Buttons>

      <Columns>
        <Column PropertyName="FullName" />
        <Column PropertyName="Username" Index="1" Size="5" />
      </Columns>

      <SubViews>
        <DetailView Id="ModalView_Users" ViewId="DetailView_Users" Title="User Information" />
      </SubViews>
    </ListView>
    <ListView ViewId="ListView_RolesUsers" CanEdit="False" Type="RolesUsers" Sort="Role.Name">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove role" ClassName="text-danger" IconName="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveRole" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this role?" />
      </Buttons>

      <Columns>
        <Column PropertyName="Role" />
      </Columns>
    </ListView>
    <ListView ViewId="ListView_UsersManagers" CanEdit="False" Type="UsersManagers" Sort="Manager.FullName" Criteria="Manager != null">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove manager" ClassName="text-danger" IconName="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveManager" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this manager?" />
      </Buttons>

      <Columns>
        <Column PropertyName="Manager.FullName" />
        <Column PropertyName="Manager.Username" Index="1" Size="4" />
      </Columns>
    </ListView>
    <ListView ViewId="ListView_UsersSubordinates" CanEdit="False" Type="UsersManagers" Sort="Subordinate.FullName" Criteria="Subordinate != null">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove subordinate" ClassName="text-danger" IconName="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveSubordinate" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this subordinate?" />
      </Buttons>

      <Columns>
        <Column PropertyName="Subordinate.FullName" />
        <Column PropertyName="Subordinate.Username" Index="1" Size="4" />
      </Columns>
    </ListView>
    <LookupView ViewId="LookupView_Users" Type="Users" Sort="FullName">
      <SearchProperties>
        <SearchProperty PropertyName="FullName" />
      </SearchProperties>
      
      <Columns>
        <Column PropertyName="FullName" />
      </Columns>
    </LookupView>

    <DetailView ViewId="DetailView_Roles" ControllerName="Roles" ActionName="Save" Type="Roles">
      
      <Buttons>
        <Button Id="SaveChanges" DisplayName="Save Changes" ClassName="btn-primary" Target="ModalFooter" />
      </Buttons>
    </DetailView>
    <ListView ViewId="ListView_Roles" ControllerName="Roles" ActionName="Edit" Type="Roles">
      <SearchProperties>
        <SearchProperty PropertyName="Name" />
      </SearchProperties>

      <Buttons>
        <Button Id="New" DisplayName="New role" ClassName="btn-primary" Target="Toolbar" ActionName="New" OpenModal="ModalView_Roles" />
        <Button Id="Delete" DisplayName="Delete role" ClassName="text-danger" IconName="oi-x" Target="Inline" ActionName="Delete" ActionParameters="objectId=[ID]" ConfirmMessage="Do you confirm the exclusion of the role?" />
      </Buttons>

      <Columns>
        <Column PropertyName="Name" />
        <Column PropertyName="IsAdministrative" Index="1" Size="1" RecordClass="text-center" />
      </Columns>

      <SubViews>
        <DetailView Id="ModalView_Roles" ViewId="DetailView_Roles" Title="Role Information" />
        <!--<DetailView Id="ModalView_RoleMenuAccess" Level="2" ViewId="DetailView_RoleMenuAccess" />
        <DetailView Id="ModalView_RolesPermissions" Level="2" ViewId="DetailView_RolesPermissions" />
        <LookupView Id="ModalView_User" Level="2" PostbackController="Role" PostbackActionName="AddEmployees" PostbackFormId="DetailView_Role" ViewId="LookupView_User" />-->
      </SubViews>
    </ListView>
    <LookupView ViewId="LookupView_Roles" Type="Roles" Sort="Name">
      <SearchProperties>
        <SearchProperty PropertyName="Name" />
      </SearchProperties>
      
      <Columns>
        <Column PropertyName="Name" />
      </Columns>
    </LookupView>

    <DetailView ViewId="DetailView_RolesMenuAccesses" ControllerName="RolesMenuAccesses" ActionName="Save" Type="RolesMenuAccesses">

    </DetailView>

    <DetailView ViewId="DetailView_RolesPermissions" ControllerName="RolesPermissions" ActionName="Save" Type="RolesPermissions">

    </DetailView>
  </Views>
</Application>