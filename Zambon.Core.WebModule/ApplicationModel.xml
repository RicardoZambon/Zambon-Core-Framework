  <ModuleConfiguration>
    <LoginDefaults Theme="" />
    <DetailViewDefaults DefaultAction="Save" DefaultView="_Modal" />
    <ListViewDefaults CanEdit="True" DefaultAction="Edit" DefaultEditModalParameter="objectId=[ID]" ShowPagination="True" PageSize="20" PagesToShow="14" />
  </ModuleConfiguration>

  <Navigation>
    <Menu Id="Reports" DisplayName="Reports" Icon="oi-print">
    </Menu>
    <Menu Id="Security" DisplayName="Security" Icon="oi-key">
      <Menu Id="User" Type="ListView" ViewID="ListView_Users" />
      <Menu Id="Role" Index="1" Type="ListView" ViewID="ListView_Roles" />
    </Menu>
    <Menu Id="Configuration" DisplayName="Configuration" Icon="oi-cog" />
  </Navigation>
  
  <Views>
    <!--Roles-->
    <DetailView ViewId="DetailView_Roles" ActionName="Save" Type="Roles">
      <Buttons>
        <Button Id="SaveChanges" DisplayName="Save Changes" CssClass="btn-primary" Target="ModalFooter" />
      </Buttons>
    </DetailView>
    <ListView ViewId="ListView_Roles" ActionName="Edit" Type="Roles">
      <SearchProperties>
        <SearchProperty PropertyName="Name" />
      </SearchProperties>
      <Buttons>
        <Button Id="New" DisplayName="New role" CssClass="btn-primary" Target="Toolbar" ActionName="New" OpenModal="ModalView_Roles" />
        <Button Id="Delete" DisplayName="Delete role" CssClass="text-danger" Icon="oi-x" Target="Inline" ActionName="Delete" ActionParameters="objectId=[ID]" ConfirmMessage="Do you confirm the exclusion of the role?" />
      </Buttons>
      <Columns>
        <Column PropertyName="Name" />
        <Column PropertyName="IsAdministrative" Index="1" Size="1" CssClass="text-center" />
      </Columns>
      <SubViews>
        <DetailView Id="ModalView_Roles" ViewId="DetailView_Roles" Title="Role Information" />
      </SubViews>
    </ListView>
    <LookupView ViewId="LookupView_Roles" Type="Roles" Sort="Name">
      <SearchProperties>
        <SearchProperty PropertyName="Name" />
      </SearchProperties>
      <Columns>
        <Column PropertyName="Name" />
      </Columns>
    </LookupView>

    <!--Roles X Users-->
    <ListView ViewId="ListView_RolesUsers" Type="RolesUsers" Sort="Role.Name" MessageOnEmpty="** NO ROLES FOUND **">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove role" CssClass="text-danger" Icon="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveRole" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this role?" />
      </Buttons>
      <Columns>
        <Column PropertyName="Role" />
      </Columns>
    </ListView>

    <!--Roles X Menu Accesses-->
    <DetailView ViewId="DetailView_RolesMenuAccesses" ActionName="Save" Type="RolesMenuAccesses">

    </DetailView>

    <!--Roles X Roles Permissions-->
    <DetailView ViewId="DetailView_RolesPermissions" ActionName="Save" Type="RolesPermissions">

    </DetailView>

    <!--Users-->
    <DetailView ViewId="DetailView_Users" ActionName="Save" Type="Users">
      <Buttons>
        <Button Id="NewRole" DisplayName="Link new role" CssClass="btn-primary" Target="ListView_RolesUsers" ActionName="AddRoles" OpenModal="ModalView_Roles" />
        <Button Id="NewManager" DisplayName="Link new manager" CssClass="btn-primary" Target="ListView_UsersManagers" ActionName="AddManagers" OpenModal="ModalView_Managers" />
        <Button Id="NewSubordinate" DisplayName="Link new subordinate" CssClass="btn-primary" Target="ListView_UsersSubordinates" ActionName="AddSubordinates" OpenModal="ModalView_Subordinates" />

        <Button Id="SaveChanges" DisplayName="Save Changes" CssClass="btn-primary" Target="ModalFooter" />
      </Buttons>
      <SubViews>
        <LookupView Id="ModalView_Roles" ViewId="LookupView_Roles" Title="Select the roles to add to the user" />
        <LookupView Id="ModalView_Managers" ViewId="LookupView_Users" Title="Select the managers to add to the user" />
        <LookupView Id="ModalView_Subordinates" ViewId="LookupView_Users" Title="Select the subordinates to add to the user" />
        <SubListView Id="SubList_RolesUsers" ViewId="ListView_RolesUsers" ScrollSize="sm" />
        <SubListView Id="SubList_UsersManagers" ViewId="ListView_UsersManagers" ScrollSize="md" />
        <SubListView Id="SubList_UsersSubordinates" ViewId="ListView_UsersSubordinates" ScrollSize="md" />
      </SubViews>
    </DetailView>
    <ListView ViewId="ListView_Users" Type="Users" Sort="FullName">
      <SearchProperties>
        <SearchProperty PropertyName="FullName" />
        <SearchProperty PropertyName="Username" Index="1" />
      </SearchProperties>
      <Buttons>
        <Button Id="New" DisplayName="New user" CssClass="btn-primary" Target="Toolbar" ActionName="New" OpenModal="ModalView_Users" />
        <Button Id="Delete" DisplayName="Delete user" CssClass="text-danger" Icon="oi-x" Target="Inline" ActionName="Delete" ActionParameters="objectId=[ID]" ConfirmMessage="Do you confirm the exclusion of the user?" />
      </Buttons>
      <Columns>
        <Column PropertyName="AuthenticationType" DisplayName="Authentication" Size="fit" />
        <Column PropertyName="FullName" Index="1" />
        <Column PropertyName="Username" Index="2" Size="5" />
        <Column PropertyName="LogonAllowed" Index="3" Size="fit" />
        <Column PropertyName="LastActivityOn" Index="4" Size="fit" FormatType="{0:g}" Alignment="Center" />
      </Columns>
      <PaintOptions>
        <PaintOption Id="DisabledUsers" BackColor="table-danger" ForeColor="text-danger" Condition="NOT LogonAllowed" />
      </PaintOptions>
      <SubViews>
        <DetailView Id="ModalView_Users" ViewId="DetailView_Users" Title="User Information" />
      </SubViews>
    </ListView>
    <LookupView ViewId="LookupView_Users" Type="Users" Sort="FullName">
      <SearchProperties>
        <SearchProperty PropertyName="FullName" />
      </SearchProperties>
      <Columns>
        <Column PropertyName="FullName" />
      </Columns>
    </LookupView>

    <!--Users X Managers-->
    <ListView ViewId="ListView_UsersManagers" Type="UsersManagers" Sort="Manager.FullName" Criteria="Manager != null" MessageOnEmpty="** NO MANAGERS FOUND **">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove manager" CssClass="text-danger" Icon="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveManager" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this manager?" />
      </Buttons>
      <Columns>
        <Column PropertyName="Manager.FullName" />
        <Column PropertyName="Manager.Username" Index="1" Size="4" />
      </Columns>
    </ListView>

    <!--Users X Subordinates-->
    <ListView ViewId="ListView_UsersSubordinates" Type="UsersManagers" Sort="Subordinate.FullName" Criteria="Subordinate != null" MessageOnEmpty="** NO SUBORDINATES FOUND **">
      <Buttons>
        <Button Id="Delete" DisplayName="Remove subordinate" CssClass="text-danger" Icon="oi-x" Target="Inline" ControllerName="User" ActionName="RemoveSubordinate" ActionParameters="deleteId=[ID]" ConfirmMessage="Do you confirm the exclusion of this subordinate?" />
      </Buttons>
      <Columns>
        <Column PropertyName="Subordinate.FullName" />
        <Column PropertyName="Subordinate.Username" Index="1" Size="4" />
      </Columns>
    </ListView>
  </Views>
</Application>